<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="timeLine"
            type="com.kotlin.project.data.model.TimeLineData" />

        <variable
            name="isSoldOut"
            type="Boolean" />

        <variable
            name="priceText"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="185dp"
        android:layout_height="230dp"
        android:background="@color/white_bg">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="0dp"
            android:layout_height="185dp"
            android:layout_marginTop="1dp"
            android:scaleType="fitCenter"
            android:background="@color/image_bg"
            imageFromUrl="@{timeLine.photo}"
            placeholder="@drawable/placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="ContentDescription"
            tools:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@{timeLine.name}"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_image"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="ContentDescription"
            tools:textColor="@color/black"
            tools:text="TestTitle" />

        <ImageView
            android:id="@+id/typeB"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/monster_ball_logo"
            android:visibility="gone"
            visibleGone="@{isSoldOut}"
            app:layout_constraintBottom_toBottomOf="@+id/main_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/main_image"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/like_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            visibleGone="@{!timeLine.numLikes.isEmpty}"
            android:text="@{timeLine.numLikes}"
            app:drawableStartCompat="@drawable/fit_xy_icon_like"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="ContentDescription"
            tools:text="999"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/comment_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            visibleGone="@{!timeLine.numComments.isEmpty}"
            android:text="@{timeLine.numComments}"
            app:drawableStartCompat="@drawable/fit_xy_icon_comment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/like_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="ContentDescription"
            tools:text="999"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/prise_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="@{priceText}"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/like_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:ignore="ContentDescription,HardcodedText"
            tools:text="$ 999" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>